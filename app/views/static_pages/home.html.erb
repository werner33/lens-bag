<div class="row">
    <div class="col-sm-12">
        <h1>
            Lens Bag.
        </h1>
        <h5>
            Experiment with all kinds of lenses. 
        </h5>
    </div>
</div>
<div class="row">
    <div class="col-md-5">
        <h3 class="bag_header"> Please choose a lens.</h3>
        <div class="bag">
            <div class="row top_row">
                <div class="left">
                    <div class="lens lens_a", onclick="setFocalLength('_20mm.jpg', image_name)">
                        <p class="lens_text">20mm</p>
                    </div>
                </div>
                <div class="right">
                    <div class="lens lens_b", onclick="setFocalLength('_24mm.jpg', image_name)">
                        <p class="lens_text">24mm</p>
                    </div>
                </div>
            </div>
            <div class="row middle_row">
                <div class="left">
                    <div class="lens lens_c", onclick="setFocalLength('_28mm.jpg', image_name)">
                        <p class="lens_text">28mm</p>
                    </div>
                </div>
                <div class="right">
                    <div class="lens lens_d", onclick="setFocalLength('_35mm.jpg', image_name)">
                        <p class="lens_text">35mm</p>
                    </div>
                </div>
            </div>
            <div class="row bottom_row">
                <div class="left">
                    <div class="lens lens_e", onclick="setFocalLength('_50mm.jpg', image_name)">
                        <p class="lens_text">50mm</p>
                    </div>
                </div>
                <div class="right">
                    <div class="lens lens_f", onclick="setFocalLength('_85mm.jpg', image_name)">
                        <p class="lens_text">85mm</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-7">
        <div class="col-md-1-offset">
          <h3 class="bag_header">Choose an image...</h3>    
          <%= image_tag 'landscape_20mm.jpg', size: '135x90', class: "thumb", id: "image_1", 
          :onclick=>"setImageName(this, focal_length)" %>
          <%= image_tag 'flower_20mm.jpg', size: '135x90', class: "thumb", id: "image_2", 
          :onclick=>"setImageName(this, focal_length)" %>
          <%= image_tag 'portrait_20mm.jpg', size: '135x90', class: "thumb", id: "image_3", 
          :onclick=>"setImageName(this, focal_length)" %>
          <%= image_tag 'architecture_20mm.jpg', size: '135x90', class: "thumb", id: "image_4", 
          :onclick=>"setImageName(this, focal_length)" %>
        </div>
        <%= image_tag 'landscape_50mm.jpg', size: '560x382', class: "main_image", id: "main_image" %>
        <br>
        <div id="photo_info">
          <p>Photo name: <span id="photo_name_text">Landscape</span></p>
          <p>Focal length: <span id="focal_length"> 50mm.</p>
        </div>
        
    </div>
</div>

<script>
var image_name = 'assets/landscape';
var focal_length = '_50mm.jpg';

function setImageName(source, focal_length) {
    var main_image = document.getElementById("main_image");
    var photo_name_text = document.getElementById("photo_name_text");
    var new_image_name = source.getAttribute('src').split('_')[0];
    image_name = new_image_name;
    photo_name_text.innerHTML = new_image_name.split('/')[2];
    main_image.setAttribute("src", image_name + focal_length);
}

function setFocalLength(source, image_name) {
    var main_image = document.getElementById("main_image");
    var new_focal_length = source;
    focal_length = new_focal_length;
    main_image.setAttribute("src", image_name + focal_length);
}

</script>
